<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="StakeOut.Views.StakeSaleForm"
             Title="Sell Stake">
    <ContentPage.Content>
        <StackLayout Spacing="10">
            <Label Text="Sell Stakes" 
                   VerticalOptions="Start"
                   HorizontalOptions="FillAndExpand"
                   IsVisible="True"
                   FontSize="Large"
                   FontAttributes="Bold"
                   BackgroundColor="Black"
                   TextColor="White"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   HeightRequest="60" />


            <Entry Keyboard="Text" Placeholder="Tournament" x:Name="tournament" />

            <StackLayout>
                <Picker x:Name="venue" Title="Venue" SelectedIndexChanged="Picker_SelectedIndexChanged" >
                    <Picker.Items>
                        <x:String>Auckland</x:String>
                        <x:String>Wellington</x:String>
                        <x:String>ChristChurch</x:String>
                        <x:String>Hamilton</x:String>
                        <x:String>Queenstown</x:String>
                        <x:String>Dunedin</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>

            <StackLayout Spacing="0">
                <Label Text="DeadLine Date" />
                <DatePicker Date="{x:Static sys:DateTime.Today}" Format="dd MMM yyyy" x:Name="date" MinimumDate="{x:Static sys:DateTime.Today}" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="13, 0" >
                <Label Text="Markup" TextColor="Black"/>
                <Slider x:Name="slider" Maximum="2" Minimum="1" HorizontalOptions="FillAndExpand"/>
                <Label Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='{0:N1}'}" />
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="0">
                <Label Text="$" TextColor="Black" VerticalOptions="Center" FontSize="Medium" />
                <Entry Keyboard="Numeric" Placeholder="Total Stake" HorizontalOptions="FillAndExpand" x:Name="money"/>
            </StackLayout>

            <Label Text="Comments" />
            <Editor VerticalOptions="FillAndExpand" x:Name="comments"/>

            <StackLayout Padding="0, 13" >
                <Button Text="Create Stake" x:Name="btn" BackgroundColor="Red" Clicked="Btn_Clicked" TextColor="White" VerticalOptions="End"
                    HorizontalOptions="Center" WidthRequest="150" HeightRequest="55"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>