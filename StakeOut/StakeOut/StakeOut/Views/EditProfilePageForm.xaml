<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Edit Profile Page"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StakeOut.Views.EditProfilePageForm"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="StartAndExpand">
                <Entry Placeholder="Name"/>
                <Entry Placeholder="Description"/>
                <Entry Placeholder="HendonMob name"/>
                <Entry Placeholder="Twitter Handle"/>
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Button Text="Done" Clicked="Button_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>